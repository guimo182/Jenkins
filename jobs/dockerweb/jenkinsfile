pipeline {
    agent {
        docker {
            image 'jenkins/jenkins:lts'
        }
    }

    parameters {
        string(name: 'name_container', defaultValue: 'proyecto-qa', description: 'Contenedor')
        string(name: 'name_imagen', defaultValue: 'proyecto-qa', description: 'Nombre imagen')
        string(name: 'tag_imagen', defaultValue: 'latest', description: 'Etiqueta imagen')
        string(name: 'puerto_imagen', defaultValue: '81', description: 'Puerto')
    }

    environment {
        name_final = "${name_container}${tag_imagen}${puerto_imagen}"
    }

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'docker build -t ${name_imagen}:${tag_imagen} ./dockerweb/'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    sh '''
                        docker run -d -p ${puerto_imagen}:8080 \
                        --name ${name_final} \
                        ${name_imagen}:${tag_imagen}
                    '''
                }
            }
        }
    }
}
